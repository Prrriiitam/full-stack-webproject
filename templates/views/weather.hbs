<!doctype html>
<html lang="en">
  <head>
    {{>headerlink}}
  </head>
  <body>
    {{>navbar}}

    <!-- main header -->
    <div class="container-fluid main_header">
      <div class="main_content">
        <form class="temp_form">
          <input type="text" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
          <input type="submit" id="submitBtn" value="search">
        </form>
      </div>
      <div class="tempinfo">
        <div class="top_layer">
          <p id="day">{{currentDay}}</p>
          <p id="today_day">{{currentDate}}</p>
        </div>
        <div class="main_layer">
          <p id="city_name">Get Output Here</p>
          <div class="middle_layer data_hide">
            <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
            <p id="temp_status"> <i class="fa-solid fa-cloud"></i></p>
          </div>
        </div>
      </div>
    </div>

    <!-- footer code -->
    {{>footer}}
    <script src="js/main.js"></script>
    <script>
      // Get the current date and day
      const getcurday = () => {
        const daysOfWeek = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
        const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
        const curTime = new Date();
        const day = daysOfWeek[curTime.getDay()];
        const date = curTime.getDate();
        const month = months[curTime.getMonth()];
        const todayDay = `${date} ${month}`;
        document.getElementById('day').innerText = day;
        document.getElementById('today_day').innerText = todayDay;
      }

      getcurday();
    </script>
  </body>
</html>
